@model GGMusicStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Join Us";
}
@Styles.Render("~/Content/Styles/layer")
@Scripts.Render("~/bundles/Scripts/layer")
<!-- banner start -->
<!-- ================ -->
<div id="banner" class="banner">
    <div class="banner-image"></div>
    <div class="banner-caption" style="top:30%">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-6 object-non-visible" data-animation-effect="fadeIn">
                    <h3 class="text-center">Welcome to <span>GGMusicStore</span></h3>
                    <hr />
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal tn-form-validation", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m=>m.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Now >>>" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- banner end -->
<script>
    $(document).ready(function () {
        $('.banner-image').backstretch('/images/changpian.jpg');
    });
</script>
